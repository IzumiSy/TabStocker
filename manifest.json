{
	"name": "__MSG_extName__",
	"version": "1.7.1",
	"manifest_version": 2,
	"description": "__MSG_extDesc__",
  "default_locale": "ja",

	"options_page": "options.html",

	"background": {
		"scripts": ["js/background.js"]
	},

  "permissions": [
		"notifications",
    "contextMenus",
    "storage",
    "unlimitedStorage",
		"tabs",
		"http://*/",
		"https://*/"
	],

	"browser_action": {
		"default_icon": "main.png",
		"default_title": "Tab Stocker",
		"default_popup": "popup.html"
	},

	"commands": {
		"stock-tab": {
			"suggested_key": { "default": "Alt+S" },
			"description": "__MSG_extShortcutDesc__"
		}
	},

	"icons": {
    "16": "main.png",
    "128": "main.png"
  }
}