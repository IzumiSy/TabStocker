{
	"name": "Tab Stocker",
	"version": "1.3",
	"manifest_version": 2,
	
	"description": "Stocks your tabs to see later",

	"options_page": "options.html",

	"background": {
		"scripts": ["background.js"]
	},

  "permissions": [
		"notifications",
    "contextMenus",
		"tabs"
	],
	
	"browser_action": {
		"default_icon": "main.png",
		"default_title": "Tab Stocker",
		"default_popup": "popup.html"
	},

	"commands": {
		"stock-tab": {
			"suggested_key": { "default": "Alt+S" },
			"description": "Stock a tab"
		}
	},

	"icons": {
    "16": "main.png",
    "128": "main.png"
  }
}