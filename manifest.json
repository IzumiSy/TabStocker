{
  "name": "__MSG_extName__",
  "version": "1.13.0",
  "manifest_version": 2,
  "description": "__MSG_extDesc__",
  "default_locale": "ja",

  "options_page": "dists/options.html",

  "background": {
    "scripts": ["dists/background.js"]
  },

  "permissions": [
    "notifications",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "tabs",
    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": "assets/main.png",
    "default_title": "Tab Stocker",
    "default_popup": "dists/popup.html"
  },

  "commands": {
    "stock-tab": {
       "suggested_key": { "default": "Alt+S" },
       "description": "__MSG_extShortcutDesc__"
    }
  },

  "icons": {
    "16": "assets/main.png",
    "128": "assets/main.png"
  }
}
